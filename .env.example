# Cloud Provider Credentials

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# Azure Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id

# GCP Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/gcp-key.json
GCP_PROJECT_ID=your-project-id

# Database Configuration
POSTGRES_USER=cloudoptimizer
POSTGRES_PASSWORD=cloudoptimizer
POSTGRES_DB=cloudoptimizer
POSTGRES_HOST=cost-storage
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# API Gateway Configuration
API_PORT=8080
NODE_ENV=development
JWT_SECRET=your-jwt-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_ADMIN_PASSWORD=cloudoptimizer

# Cost Thresholds
DAILY_COST_THRESHOLD=1000
MONTHLY_BUDGET=5000
ALERT_EMAIL=alerts@your-company.com

# Service Ports
COST_NORMALIZER_PORT=8000
NETWORK_MANAGER_PORT=8001
COST_OPTIMIZER_PORT=8002
RESOURCE_INVENTORY_PORT=8003
BUDGET_MANAGER_PORT=8004

# Feature Flags
ENABLE_COST_OPTIMIZATION=true
ENABLE_PERFORMANCE_OPTIMIZATION=true
ENABLE_SECURITY_OPTIMIZATION=true
ENABLE_CROSS_CLOUD_VPN=true

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_ITEMS=1000

# VPN Configuration
VPN_KEY_ROTATION_DAYS=30
VPN_TUNNEL_BANDWIDTH_MBPS=1000

# Resource Optimization
RESOURCE_UTILIZATION_THRESHOLD=20
COST_SAVING_MINIMUM_PERCENT=10
OPTIMIZATION_SCAN_INTERVAL_HOURS=24

# Currency
DEFAULT_CURRENCY=USD
ENABLE_CURRENCY_CONVERSION=true

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL_MS=300000
ENABLE_DARK_MODE=false
CHART_ANIMATION_SPEED_MS=200

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Security
MINIMUM_PASSWORD_LENGTH=12
ENABLE_2FA=false
SESSION_TIMEOUT_MINUTES=60
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30
BACKUP_TIME_UTC=02:00

# Metrics Collection
METRICS_COLLECTION_INTERVAL_SECONDS=60
ENABLE_DETAILED_METRICS=true

# Note: This is an example configuration file.
# Copy this file to .env and replace the values with your actual configuration.
# Never commit the actual .env file to version control.
